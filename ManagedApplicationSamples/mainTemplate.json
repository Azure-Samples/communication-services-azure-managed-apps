{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "communicationServicesNamePrefix": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "global"
        },
        "datalocation": {
            "type": "string"
        },
        "analyticsWorkspaceNamePrefix": {
            "type": "string"
        },
        "userAssignedIdentityName": {
            "type": "string"
        },
        "todayUtcNow": {
            "type": "string",
            "defaultValue": "[utcNow('yyyyMMddHHmmss')]"
        },
        "storageAccountNamePrefix": {
            "type": "string"
        },
        "storageAccountType": {
            "type": "string"
        },
        "storageAccountLocation": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "cognitiveServicesNamePrefix": {
            "type": "string"
        },
        "cognitiveServicesSku": {
            "type": "string"
        },
        "cognitiveServicesLocation": {
            "type": "string"
        }
    },
    "variables": {
        "nestedTemplateUri": "[uri(deployment().properties.templateLink.uri, 'nestedtemplates/communicationServices.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "nestedDeployment",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "contentVersion": "1.0.0.0",
                    "uri": "[variables('nestedTemplateUri')]"
                },
                "parameters": {
                    "communicationServicesNamePrefix": {
                        "value": "[parameters('communicationServicesNamePrefix')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "datalocation": {
                        "value": "[parameters('datalocation')]"
                    },
                    "analyticsWorkspaceNamePrefix":{
                        "value": "[parameters('analyticsWorkspaceNamePrefix')]"
                    },
                    "userAssignedIdentityName": {
                        "value": "[parameters('userAssignedIdentityName')]"
                    },
                    "todayUtcNow": {
                        "value": "[parameters('todayUtcNow')]"
                    },
                    "storageAccountNamePrefix": {
                        "value": "[parameters('storageAccountNamePrefix')]"
                    },
                    "storageAccountType": {
                        "value": "[parameters('storageAccountType')]"
                    },
                    "storageAccountLocation": {
                        "value": "[parameters('storageAccountLocation')]"
                    },
                    "cognitiveServicesNamePrefix": {
                        "value": "[parameters('cognitiveServicesNamePrefix')]"
                    },
                    "cognitiveServicesSku": {
                        "value": "[parameters('cognitiveServicesSku')]"
                    },
                    "cognitiveServicesLocation": {
                        "value": "[parameters('cognitiveServicesLocation')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "communicationServicesHostName": {
            "type": "string",
            "value": "[reference('nestedDeployment').outputs.communicationServicesHostName.value]"
        },
        "ImmutableResourceId": {
            "type": "string",
            "value": "[reference('nestedDeployment').outputs.ImmutableResourceId.value]"
        },
        "logsAnalyticsWorkspaceProvisioningState": {
            "type": "string",
            "value": "[reference('nestedDeployment').outputs.logsAnalyticsWorkspaceProvisioningState.value]"
        },
        "storageQueueEndpoint": {
            "type": "string",
            "value": "[reference('nestedDeployment').outputs.storageQueueEndpoint.value]"
        },
        "userAssignedIdentityId": {
            "type": "string",
            "value": "[reference('nestedDeployment').outputs.userAssignedIdentityId.value]"
        },
        "cognitiveSerivicesEndpoint": {
            "type": "string",
            "value": "[reference('nestedDeployment').outputs.cognitiveSerivicesEndpoint.value]"
        }
    }
}